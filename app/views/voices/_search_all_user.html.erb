<div class="container">
  <div class="col-md-5"></div>
    <% if @user.blank? || @user.nil? %>
      <h4 align="center">No Record Found </h4>
    <% else %>
       <table id="datatable" class="table table-striped table-bordered responsive">
        <thead>
          <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          <%@user.each do |user|%>
            <tr>
              <td col-md-2><%= user.id%></td>
              <td col-md-2><%= user.name%></td>
              <td col-md-2><%= user.designation%></td>
            </tr>
          <%end%> 
        </tbody>
      </table>
    <%end%>
  </div>
</div>

